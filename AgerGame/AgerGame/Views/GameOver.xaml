<UserControl x:Class="AgerGame.Views.GameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgerGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <StackPanel Name="stGameOver" Background="Azure">

        <Label Content="GameOver" FontSize="30"
               HorizontalAlignment="Center"
               Margin="20"
              
               Style="{StaticResource Start2P}" Width="250"/>
        <Label Name="lbTimer"
               Content="Time" FontSize="15"
               HorizontalAlignment="Center"         
               Style="{StaticResource Start2P}" Width="250"
               Margin="20"/>

        <Button Name="btnOK" Content="OK"
                Width="150" Height="40"
                HorizontalAlignment="Center"
                Style="{StaticResource Start2P}"/>
    </StackPanel>
</UserControl>
