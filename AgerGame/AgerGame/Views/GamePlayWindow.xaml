<Window x:Class="AgerGame.Views.GamePlayWindow"
        x:Name="GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgerGame.Views"
        mc:Ignorable="d"
        Title="GamePlayWindow" Height="450" Width="800"
        WindowState="Maximized" WindowStyle="None">
    <Canvas x:Name="GamePlayCanvas">
        <Canvas.Background>
            <ImageBrush ImageSource="/Resource/Image/gameBg.jpg" 
                        Stretch="UniformToFill" Opacity="0.3"/>
        </Canvas.Background>
    </Canvas>
</Window>
